@model IEnumerable<MVCApplication.DTOs.OrderDto>

<h2>Danh sách Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Status</th>
            <th>Payment</th>
            <th>Total</th>
            <th>Ngày tạo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.UserId</td>
                <td>@order.OrderStatus</td>
                <td>@order.PaymentStatus</td>
                <td>@order.TotalAmount</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId">Chi tiết</a> |
                    <a asp-action="Edit" asp-route-id="@order.OrderId">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
