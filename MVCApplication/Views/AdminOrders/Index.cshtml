@{
    Layout = "_Layout.Admin";

    // Hàm xác định class cho trạng thái order
    string StatusClass(string s)
    {
        if (string.IsNullOrWhiteSpace(s)) return "orders-pill neutral";
        s = s.ToLowerInvariant();
        if (s.Contains("pending")) return "orders-pill warn";
        if (s.Contains("completed") || s.Contains("shipped") || s.Contains("delivered")) return "orders-pill ok";
        if (s.Contains("cancel") || s.Contains("failed") || s.Contains("rejected")) return "orders-pill bad";
        return "orders-pill neutral";
    }

    // Hàm xác định class cho trạng thái thanh toán
    string PayClass(string s)
    {
        if (string.IsNullOrWhiteSpace(s)) return "orders-pill neutral";
        s = s.ToLowerInvariant();

        if (s.Contains("unpaid") || s.Contains("failed")) return "orders-pill bad";       // ❌ đỏ trước
        if (s.Contains("refunded") || s.Contains("partial")) return "orders-pill warn";   // ⚠️ vàng
        if (s.Contains("paid") || s.Contains("captured")) return "orders-pill ok";        // ✅ xanh lá
        return "orders-pill neutral";
    }


    // Lấy các giá trị từ ViewBag
    var currentPage = ViewBag.Page ?? 1;
    var totalPagesCount = ViewBag.TotalPages ?? 1;
    var search = ViewBag.Search ?? "";
    var status = ViewBag.Status ?? "";
    var payment = ViewBag.Payment ?? "";
}
<style>
