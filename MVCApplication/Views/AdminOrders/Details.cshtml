@model MVCApplication.DTOs.OrderDto

<h2>Chi tiết Order #@Model.OrderId</h2>

<p><strong>User:</strong> @Model.UserId</p>
<p><strong>Status:</strong> @Model.OrderStatus</p>
<p><strong>Payment:</strong> @Model.PaymentStatus</p>
<p><strong>Total:</strong> @Model.TotalAmount</p>
<p><strong>Ngày tạo:</strong> @Model.OrderDate.ToString("dd/MM/yyyy")</p>

<h4>Danh sách sản phẩm</h4>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Số lượng</th>
            <th>Giá</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.Quantity</td>
            <td>@item.UnitPrice</td>
        </tr>
    }
    </tbody>
</table>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-primary">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>