@model MVCApplication.DTOs.PaymentRequestDTO

<h2>Create Payment</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="OrderID"></label>
        <input asp-for="OrderID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PaidAmount"></label>
        <input asp-for="PaidAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PaymentMethod"></label>
        <input asp-for="PaymentMethod" class="form-control" />
    </div>
    <input type="hidden" asp-for="PaymentStatus" value="Pending" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
