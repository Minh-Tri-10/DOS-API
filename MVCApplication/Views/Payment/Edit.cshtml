@model MVCApplication.DTOs.PaymentRequestDTO

<h2>Edit Payment</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="OrderID" />
    <div class="form-group">
        <label asp-for="PaidAmount"></label>
        <input asp-for="PaidAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PaymentMethod"></label>
        <input asp-for="PaymentMethod" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PaymentStatus"></label>
        <select asp-for="PaymentStatus" class="form-control">
            <option value="Pending">Pending</option>
            <option value="Success">Success</option>
            <option value="Cancelled">Cancelled</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
