﻿@{
    var userIdClaim = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isLoggedIn = User.Identity?.IsAuthenticated ?? false;
    var controller = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "");
    var action = (ViewContext.RouteData.Values["action"]?.ToString() ?? "");
    var area = (ViewContext.RouteData.Values["area"]?.ToString() ?? "");

    int? currentUserId = null;
    if (int.TryParse(userIdClaim, out var parsedId))
    {
        currentUserId = parsedId;
    }

    var userName = User.FindFirst("full_name")?.Value
                   ?? User.FindFirst("username")?.Value
                   ?? (isLoggedIn ? "Admin" : "Khách");
    var userEmail = User.FindFirst(ClaimTypes.Email)?.Value ?? (isLoggedIn ? "Chưa có email" : "guest@example.com");
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value ?? (isLoggedIn ? "admin" : "guest");
    var avatarUrl = User.FindFirst("avatar_url")?.Value ?? "https://i.pravatar.cc/128?img=47";

    bool Is(string c, string a) =>
        controller.Equals(c, StringComparison.OrdinalIgnoreCase) &&
        action.Equals(a, StringComparison.OrdinalIgnoreCase) &&
        (string.IsNullOrEmpty(area) || area.Equals("", StringComparison.OrdinalIgnoreCase));

    bool isOrders = Is("AdminOrders", "Index");
    bool isCategories = Is("AdminCategory", "Index");
    bool isProducts = Is("AdminProduct", "Index");
    bool isAccounts = Is("AdminAccounts", "Index");
    bool isRevenue = Is("Revenue", "Index");
    bool isPayments = Is("Payment", "Index");
}

