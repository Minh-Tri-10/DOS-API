﻿@using System.Linq
@{
    // 🔹 Lấy page hiện tại từ RouteData (Razor Pages)
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? "";
    if (currentPage.EndsWith("/") && currentPage.Length > 1) currentPage = currentPage.TrimEnd('/');

    var userIdClaim = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isLoggedIn = User.Identity?.IsAuthenticated ?? false;
    var currentUserId = 0;
    if (int.TryParse(userIdClaim, out var parsedUserId))
    {
        currentUserId = parsedUserId;
    }

    var avatarUrl = User.FindFirst("avatar_url")?.Value ?? "https://i.pravatar.cc/128?img=47";
    var userName = User.FindFirst("full_name")?.Value
        ?? User.FindFirst("username")?.Value
        ?? (isLoggedIn ? "Người dùng" : "Khách");
    var userEmail = User.FindFirst(ClaimTypes.Email)?.Value ?? (isLoggedIn ? "Chưa có email" : "guest@example.com");
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value ?? (isLoggedIn ? "customer" : "guest");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <!-- 🔹 Badge styling cho icon Cart -->
    <style>
        .rail-item {
            position: relative;
        }

        .cart-badge {
            position: absolute;
            top: -6px;
            left: -6px; /* góc trái như yêu cầu */
            min-width: 18px;
            height: 18px;
            padding: 0 4px;
            border-radius: 999px;
            background: linear-gradient(135deg,#22d3ee,#3b82f6);
            color: #0b1220;
            font-weight: 800;
            font-size: 11px;
            line-height: 1;
            display: none;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 10px rgba(2,8,23,.35);
        }
    </style>
</head>
<body class="layout-rail">
    <!-- LEFT RAIL -->
    <aside class="rail">
        <!-- Avatar -> user popup -->
        <button class="avatar-btn" data-bs-toggle="modal" data-bs-target="#userModal" aria-label="User profile">
            <img src="@avatarUrl" alt="Avatar" class="avatar-img" />
            <span class="status-dot"></span>
        </button>
        @{
            // Lấy page hiện tại để so sánh
            currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? "";
            if (currentPage.EndsWith("/") && currentPage.Length > 1)
                currentPage = currentPage.TrimEnd('/');
        }
        <!--So sánh để active icon của sidebar-->
        <nav class="rail-nav">
            <!-- Products List -->
            <a class="rail-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Customer" ? "active" : "")"
               asp-controller="Customer" asp-action="Index"
               data-bs-toggle="tooltip"
               data-bs-title="Products"
               aria-label="Products">
                <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="1.8">
                    <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                    <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                </svg>
            </a>
            <!-- Cart (có badge) -->
            <a class="rail-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Cart" ? "active" : "")"
               asp-controller="Cart" asp-action="Index">
                <svg viewBox="0 0 24 24" width="22" height="22" stroke="currentColor" stroke-width="1.8" fill="none">
                    <path d="M6 6h15l-1.5 9H7.5L6 6Z" />
                    <path d="M6 6 5 3H3" />
                    <circle cx="9" cy="20" r="1.5" />
                    <circle cx="18" cy="20" r="1.5" />
                </svg>
                <span id="cartBadge" class="cart-badge">0</span>
            </a>
            <a class="rail-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")"
               asp-controller="Orders" asp-action="Index"
               data-bs-toggle="tooltip"
               data-bs-title="Orders"
               aria-label="Orders">
                <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="1.8">
                    <path d="M12.5 17h-11a.5.5 0 0 1-.5-.5v-12a.5.5 0 0 1 .5-.5h20a.5.5 0 0 1 .5.5v7m-18 4h18m-17 0v-4" />
                    <rect width="20" height="15" x="2" y="3" rx="1.5" ry="1.5" />
                    <circle cx="12" cy="18.5" r="1.5" />
                    <path d="M19 19l2 2m0-2l-2 2" />
                </svg>
            </a>
        </nav>
        <!-- Bottom: settings + sign out -->
        <div class="rail-bottom">
            <button class="rail-item" data-bs-toggle="modal" data-bs-target="#settingsModal" aria-label="Quick settings">
                <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="1.8">
                    <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"></path>
                    <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 2.83-2.83l.06.06A1.65 1.65 0 0 0 9 4.6a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 2.83l-.06.06A1.65 1.65 0 0 0 19.4 9c.19.42.29.88.29 1.35s-.1.93-.29 1.35Z"></path>
                </svg>
            </button>
            @if (isLoggedIn)
            {
                <form asp-controller="Accounts" asp-action="Logout" method="post">
                    <button class="rail-item" type="submit" aria-label="Sign out">
                        <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="1.8">
                            <path d="M16 17l5-5-5-5" />
                            <path d="M21 12H9" />
                            <path d="M12 19a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5a2 2 0 0 1 2 2" />
                        </svg>
                    </button>
                </form>
            }
            else
            {
                <a class="rail-item" asp-controller="Accounts" asp-action="Login" aria-label="Sign in">
                    <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="1.8">
                        <path d="M8 17l-5-5 5-5" />
                        <path d="M3 12h12" />
                        <path d="M15 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2h-1a2 2 0 0 0-2 2" />
                    </svg>
                </a>
            }
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="content-area">
        <header class="content-header">
            <div>
                <h1 class="content-title">Xin chào, @userName!</h1>
                <p class="content-subtitle">Chọn đồ uống yêu thích của bạn và đặt hàng ngay.</p>
            </div>
            <div class="content-actions">
                <button class="btn btn-primary-soft" data-bs-toggle="modal" data-bs-target="#settingsModal">
                    Quick settings
                </button>
                <button class="btn btn-outline-light-soft">
                    Support
                </button>
            </div>
        </header>

        <section class="content-body">
            @RenderBody()
        </section>
    </main>

    <!-- USER MODAL -->
    <div class="modal fade" id="userModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content modal-surface">
                <div class="modal-body p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <img src="@avatarUrl" class="avatar-lg" alt="Avatar" />
                        <div>
                            <div class="fw-bold">@userName</div>
                            <div class="text-muted small">@userEmail • @userRole</div>
                        </div>
                    </div>

                    <div class="d-grid">
                        @if (isLoggedIn)
                        {
                            <a class="btn btn-outline-light-soft"
                               asp-controller="Accounts" asp-action="Profile">
                                Thông tin tài khoản
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary-soft"
                               asp-controller="Accounts" asp-action="Login">
                                Đăng nhập
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- QUICK SETTINGS -->
    <div class="modal fade" id="settingsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content modal-surface">
                <div class="modal-header border-0 pb-0">
                    <h6 class="modal-title">Quick Settings</h6>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body pt-2">
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label small">Theme</label>
                            <div class="btn-group w-100" role="group">
                                <button type="button" class="btn btn-toggle" data-theme="light">Light</button>
                                <button type="button" class="btn btn-toggle" data-theme="dark">Dark</button>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label small">Language</label>
                            <select id="langSelect" class="form-select">
                                <option value="en">English</option>
                                <option value="vi" selected>Tiếng Việt</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button class="btn btn-primary-soft" data-bs-dismiss="modal">Done</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Expose CURRENT_USER_ID cho JS -->
    <script>
        window.CURRENT_USER_ID = @currentUserId;
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- 🔹 Script: load số món trong giỏ & hiển thị badge -->
    <script>
        async function fetchCartCount() {
          try {
            const res = await fetch('/api/cart/count');
            if (!res.ok) return 0;
            const data = await res.json();
            return typeof data.count === 'number' ? data.count : 0;
          } catch { return 0; }
        }
        async function updateCartBadge() {
          const badge = document.getElementById('cartBadge');
          const userId = window.CURRENT_USER_ID || 0;
          if (!badge || !userId) { badge?.style?.setProperty('display', 'none'); return; }
          const count = await fetchCartCount();
          if (count > 0) {
            badge.textContent = count > 99 ? '99+' : String(count);
            badge.style.display = 'inline-flex';
          } else {
            badge.style.display = 'none';
          }
        }
        window.updateCartBadge = updateCartBadge;
        document.addEventListener('DOMContentLoaded', updateCartBadge);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
