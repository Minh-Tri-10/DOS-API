            transform: translateY(-1px);
        }

        /* hai trạng thái riêng */
        .btn-ban.ban {
            background: linear-gradient(180deg, color-mix(in oklab,#ef4444 20%, transparent), color-mix(in oklab,#dc2626 15%, transparent));
            border-color: rgba(239,68,68,.35);
            color: #fee2e2;
            text-shadow: 0 1px 0 color-mix(in oklab,#000 35%, transparent);
        }

            .btn-ban.ban:hover {
                box-shadow: 0 8px 22px color-mix(in oklab,#ef4444 25%, transparent);
            }

        .btn-ban.unban {
            background: linear-gradient(180deg, color-mix(in oklab,#22c55e 20%, transparent), color-mix(in oklab,#16a34a 15%, transparent));
            border-color: rgba(34,197,94,.35);
            color: #dcfce7;
            text-shadow: 0 1px 0 color-mix(in oklab,#000 35%, transparent);
        }

            .btn-ban.unban:hover {
                box-shadow: 0 8px 22px color-mix(in oklab,#22c55e 25%, transparent);
            }

    /* Light theme overrides */
    :root[data-theme="light"] .btn-ban {
        color: #0f172a;
        text-shadow: none;
        border-color: rgba(0,0,0,.08);
    }

        :root[data-theme="light"] .btn-ban.ban {
            background: linear-gradient(180deg,#fee2e2,#fecaca);
            color: #7f1d1d;
        }

        :root[data-theme="light"] .btn-ban.unban {
            background: linear-gradient(180deg,#bbf7d0,#86efac);
            color: #064e3b;
        }

</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.ban-form').forEach(form => {
                form.addEventListener('submit', handleBanForm);
            });
        });

        async function handleBanForm(event) {
            event.preventDefault();
            const form = event.currentTarget;
            const submitButton = form.querySelector('button[type="submit"]');
            if (!submitButton) {
                return;
            }

            const payload = new URLSearchParams(new FormData(form));

            try {
                const response = await fetch(form.action, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: payload
                });

                const body = await safeParseJson(response);

                if (!response.ok || !body || !body.success) {
                    const message = body && body.message ? body.message : 'Không thể cập nhật trạng thái tài khoản.';
                    throw new Error(message);
                }

                refreshRowState(form, body.isBanned);
            } catch (error) {
                console.error(error);
                const alertMessage = error && error.message ? error.message : 'Đã có lỗi xảy ra khi cập nhật trạng thái tài khoản.';
                alert(alertMessage);
            }
        }

        async function safeParseJson(response) {
            try {
                return await response.json();
            } catch {
                return null;
            }
        }

        function refreshRowState(form, isBanned) {
            const row = form.closest('tr');
            const statusPill = row ? row.querySelector('.pill.status') : null;
            if (statusPill) {
                statusPill.textContent = isBanned ? 'Banned' : 'Active';
                statusPill.classList.toggle('banned', isBanned);
                statusPill.classList.toggle('active', !isBanned);
            }

            const hiddenInput = form.querySelector('input[name="isBanned"]');
            const submitButton = form.querySelector('button[type="submit"]');
            const nextState = !isBanned;

            if (hiddenInput) {
                hiddenInput.value = nextState.toString().toLowerCase();
            }

            if (submitButton) {
                submitButton.textContent = nextState ? 'Ban' : 'Unban';
                submitButton.classList.remove('ban', 'unban');
                submitButton.classList.add(nextState ? 'ban' : 'unban');
                const nextConfirm = nextState ? 'Ban tài khoản này?' : 'Unban tài khoản này?';
                submitButton.setAttribute('onclick', `return confirm('${nextConfirm}');`);
            }

            form.dataset.currentState = isBanned ? 'true' : 'false';
        }
    </script>
}
