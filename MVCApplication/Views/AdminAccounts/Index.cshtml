@model IEnumerable<MVCApplication.Models.UserViewModel>
@{
    Layout = "_Layout.Admin";
}
<div class="page-block">
    <div class="page-heading"></div>

    <div class="card-surface">
        <div class="table-wrap">
            <table class="user-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone</th>     <!-- ✅ Thêm cột Phone -->
                        <th>Role</th>
                        <th>Trạng thái</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr data-user-id="@u.UserId">
                            <td class="cell-id">#@u.UserId</td>
                            <td class="cell-username">@u.Username</td>
                            <td class="cell-email">@u.Email</td>
                            <td class="cell-phone">@u.Phone</td>   <!-- ✅ Hiển thị Phone -->
                            <td><span class="pill role">@u.Role</span></td>
                            <td>
                                @if (u.IsBanned)
                                {
                                    <span class="pill status banned">Banned</span>
                                }
                                else
                                {
                                    <span class="pill status active">Active</span>
                                }
                            </td>
                            <td>
                                @{
                                    var nextIsBanned = !u.IsBanned;
                                    var confirmMessage = nextIsBanned ? "Ban tài khoản này?" : "Unban tài khoản này?";
                                }
                                <form asp-controller="AdminAccounts"
                                      asp-action="ToggleBan"
                                      asp-route-id="@u.UserId"
                                      method="post"
                                      class="ban-form"
                                      data-user-id="@u.UserId"
                                      data-current-state="@(u.IsBanned.ToString().ToLowerInvariant())"
                                      style="display:inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="isBanned" value="@(nextIsBanned.ToString().ToLowerInvariant())" />
                                    <button type="submit"
                                            class="btn-ban @(nextIsBanned ? "ban" : "unban")"
                                            onclick="return confirm('@confirmMessage');">
                                        @(nextIsBanned ? "Ban" : "Unban")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>


<style>
    /* ===== WOW PACK v2 – Users page (dark/light theo biến layout) ===== */

    /* ---------- khối trang & tiêu đề có underline phát sáng ---------- */
    .page-block {
        padding: 16px 0
    }

    .page-heading {
        display: flex;
        align-items: flex-end;
        gap: 12px;
        margin: 0 0 18px
    }

        .page-heading h2 {
            margin: 0;
            font-weight: 800;
            letter-spacing: .2px;
            line-height: 1.1
        }

        .page-heading .under {
            position: relative;
            height: 6px;
            flex: 1;
            min-width: 120px;
            border-radius: 999px;
            background: linear-gradient(90deg,var(--accent),var(--accent2));
            filter: saturate(1.1) brightness(1.05);
            box-shadow: 0 0 22px color-mix(in oklab,var(--accent) 45%, transparent);
        }

    /* ---------- card glass + viền gradient tinh tế ---------- */
    .card-surface {
        position: relative;
        isolation: isolate;
        background: color-mix(in oklab,var(--bg-soft) 92%, transparent);
        color: var(--text);
        border: 1px solid color-mix(in oklab,var(--border) 70%, transparent);
        border-radius: 18px;
        box-shadow: 0 10px 30px color-mix(in oklab, #000 35%, transparent), 0 1px 0 color-mix(in oklab,#fff 6%, transparent) inset;
        overflow: hidden;
    }

        .card-surface::before {
            /* viền gradient mờ chạy nhẹ */
            content: "";
            position: absolute;
            inset: -1px;
            border-radius: inherit;
            z-index: -1;
            background: conic-gradient(from 180deg, color-mix(in oklab,var(--accent) 40%, transparent), color-mix(in oklab,var(--accent2) 40%, transparent), transparent 40%);
            filter: blur(10px) saturate(1.2);
            opacity: .45;
            mask: linear-gradient(#000 0 0);
            animation: ringFloat 12s linear infinite;
        }
    @@keyframes ringFloat {
        to

    {
        transform: rotate(1turn)
    }

    }

    /* ---------- nền pattern siêu nhẹ bên trong bảng ---------- */
    /* --- REPLACE block ::after hiện tại bằng block này --- */
    .card-surface::after {
        content: "";
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 0;
        /* LAYER ORDER: lớp đầu tiên vẽ TRÊN cùng => để ly nước ở đầu tiên */
        background: url('/media/overlays/neon-drink.png') center 38% / 560px no-repeat, /* LY NƯỚC */
        radial-gradient(1200px 600px at 10% -20%, color-mix(in oklab,var(--accent) 10%, transparent), transparent 60%), /* pattern 1 */
        radial-gradient(800px 500px at 110% 30%, color-mix(in oklab,var(--accent2) 10%, transparent), transparent 60%); /* pattern 2 */
        /* Hiệu ứng chung: ly “rõ dần – mờ dần” + pattern trôi nhẹ */
        filter: saturate(1.15); /* rực hơn chút */
        opacity: .35; /* tổng opacity cho toàn lớp */
        animation: drinkPulse 5.8s ease-in-out infinite, /* nhịp thở cho ly */
        pageGlow 20s linear infinite; /* trôi rất nhẹ cho pattern */
    }

    /* Nếu muốn ly đậm/nhạt ở theme sáng: có thể giảm ảnh ở light (tùy chọn) */
    :root[data-theme="light"] .card-surface::after {
        opacity: .25; /* dịu hơn ở light (tuỳ bạn) */
    }


    /* Đảm bảo content nổi trên overlay */
    .card-surface > * {
        position: relative;
        z-index: 1;
    }

    /* --- KEYFRAMES (Razor dùng @@keyframes) --- */
    @@keyframes drinkPulse {
        0% {
            filter: saturate(1.05) blur(12px);
            opacity: .22;
            transform: none;
        }

        25% {
            filter: saturate(1.15) blur(10px);
            opacity: .30;
        }

        50% {
            filter: saturate(1.25) blur(8px);
            opacity: .42;
            transform: scale(1.01);
        }
        /* rõ nhất */
        75% {
            filter: saturate(1.15) blur(10px);
            opacity: .30;
        }

        100% {
            filter: saturate(1.05) blur(12px);
            opacity: .22;
            transform: none;
        }
    }

    @@keyframes pageGlow {
        0% {
            transform: translateZ(0) scale(1);
        }

        50% {
            transform: translateZ(0) scale(1.02);
        }

        100% {
            transform: translateZ(0) scale(1);
        }
    }


    /* ---------- wrap bảng + scrollbar đẹp ---------- */
    .table-wrap {
        position: relative;
        z-index: 1;
        overflow: auto;
        border-radius: 16px
    }

        .table-wrap::-webkit-scrollbar {
            height: 10px
        }

        .table-wrap::-webkit-scrollbar-thumb {
            background: color-mix(in oklab,var(--muted) 35%, transparent);
            border-radius: 30px;
            border: 2px solid transparent;
            background-clip: content-box;
        }

    /* ---------- bảng glassy + hover “lifted row” ---------- */
    .user-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        min-width: 760px;
        color: var(--text);
        table-layout: fixed;
        backdrop-filter: saturate(1.05);
    }

        .user-table thead th {
            position: sticky;
            top: 0;
            z-index: 2;
            background: linear-gradient(180deg, color-mix(in oklab,#fff 6%, transparent), transparent);
            backdrop-filter: blur(6px);
            text-align: left;
            font-weight: 700;
            letter-spacing: .2px;
            padding: 16px 18px;
            font-size: 13.5px;
            color: var(--muted);
            border-bottom: 1px solid color-mix(in oklab,var(--border) 70%, transparent);
        }

            .user-table thead th:first-child {
                border-top-left-radius: 16px
            }

            .user-table thead th:last-child {
                border-top-right-radius: 16px
            }

        .user-table tbody td {
            padding: 16px 18px;
            font-size: 15px;
            vertical-align: middle;
            border-bottom: 1px dashed color-mix(in oklab,var(--border) 70%, transparent);
            background: color-mix(in oklab,transparent 100%, transparent);
        }

        /* striping mờ và highlight trái khi hover */
        .user-table tbody tr:nth-child(even) {
            background: linear-gradient(0deg, color-mix(in oklab,#fff 3%, transparent), transparent);
        }

        .user-table tbody tr {
            transition: transform .18s ease, background .25s ease, box-shadow .25s ease;
        }

            .user-table tbody tr:hover {
                transform: translateY(-1px);
                background: linear-gradient(0deg, color-mix(in oklab,#fff 5%, transparent), transparent), linear-gradient(90deg, color-mix(in oklab,var(--accent) 14%, transparent), transparent 40%);
                box-shadow: 0 8px 22px color-mix(in oklab,#000 22%, transparent);
            }

            /* bo góc cuối bảng */
            .user-table tbody tr:last-child td:first-child {
                border-bottom-left-radius: 16px
            }

            .user-table tbody tr:last-child td:last-child {
                border-bottom-right-radius: 16px
            }

        /* ---------- layout cột sang chuẩn dashboard ---------- */
        .user-table th:nth-child(1), .user-table td:nth-child(1) {
            width: 70px; /* ID nhỏ lại */
            text-align: center;
        }

        .user-table th:nth-child(2), .user-table td:nth-child(2) {
            width: 160px; /* Username */
        }

        .user-table th:nth-child(3), .user-table td:nth-child(3) {
            width: 230px; /* Email */
            word-break: break-word;
        }

        .user-table th:nth-child(4), .user-table td:nth-child(4) {
            width: 160px; /* Phone */
            text-align: center;
        }

        .user-table th:nth-child(5), .user-table td:nth-child(5) {
            width: 140px; /* Role */
            text-align: center;
        }

        .user-table th:nth-child(6), .user-table td:nth-child(6) {
            width: 140px; /* Status */
            text-align: center;
        }

        .user-table th:nth-child(7), .user-table td:nth-child(7) {
            width: 100px; /* Action */
            text-align: center;
        }

    /* Status */

    /* ---------- ID/Email/Username style ---------- */
    .cell-id {
        font-variant-numeric: tabular-nums;
        color: var(--muted)
    }

    .cell-username {
        font-weight: 700
    }

    .cell-email {
        color: var(--muted);
        word-break: break-all
    }

    /* ---------- SUPER PILL: gradient glass + glow nhẹ & width đồng bộ ---------- */
    .pill {
        display: inline-grid;
        place-items: center;
        width: 100%;
        min-width: 150px;
        padding: 10px 14px;
        border-radius: 999px;
        font-size: 13.5px;
        font-weight: 700;
        letter-spacing: .25px;
        position: relative;
        isolation: isolate;
        color: var(--text);
        background: linear-gradient(180deg, color-mix(in oklab,#fff 8%, transparent), transparent), color-mix(in oklab, var(--bg-soft) 80%, transparent);
        border: 1px solid color-mix(in oklab,var(--border) 70%, transparent);
        box-shadow: 0 1px 0 color-mix(in oklab,#fff 6%, transparent) inset, 0 6px 18px color-mix(in oklab,#000 30%, transparent);
        transition: box-shadow .25s ease, transform .12s ease, background .25s ease;
        white-space: nowrap;
    }

        .pill::before {
            /* viền ánh sáng vòng trong */
            content: "";
            position: absolute;
            inset: 0;
            border-radius: inherit;
            z-index: -1;
            background: radial-gradient(80% 140% at 50% 0%, color-mix(in oklab,var(--accent) 30%, transparent), transparent 55%);
            opacity: .45;
            filter: saturate(1.2) blur(6px);
        }

        .pill:hover {
            transform: translateY(-1px);
            box-shadow: 0 1px 0 color-mix(in oklab,#fff 8%, transparent) inset, 0 10px 26px color-mix(in oklab, var(--accent2) 26%, transparent);
        }

        /* role tone xanh gradient */
        .pill.role {
            background: linear-gradient(180deg, color-mix(in oklab,var(--accent2) 16%, transparent), color-mix(in oklab,var(--accent) 12%, transparent)), color-mix(in oklab, var(--bg-soft) 78%, transparent);
            border-color: color-mix(in oklab, var(--accent2) 40%, var(--border) 60%);
            text-shadow: 0 1px 0 color-mix(in oklab,#000 35%, transparent);
        }

        /* status: active / banned – màu khác nhau + dot */
        .pill.status {
            position: relative;
            padding-left: 34px
        }

            .pill.status::after {
                content: "";
                position: absolute;
                left: 12px;
                top: 50%;
                transform: translateY(-50%);
                width: 10px;
                height: 10px;
                border-radius: 50%;
                box-shadow: 0 0 0 3px color-mix(in oklab,#000 35%, transparent) inset, 0 0 10px currentColor;
            }

            .pill.status.active {
                background: linear-gradient(180deg, color-mix(in oklab,#22c55e 22%, transparent), color-mix(in oklab,#16a34a 12%, transparent)), color-mix(in oklab, var(--bg-soft) 78%, transparent);
                border-color: color-mix(in oklab,#22c55e 45%, var(--border) 55%);
                text-shadow: 0 1px 0 color-mix(in oklab,#000 35%, transparent);
                color: #dcfce7;
            }

                .pill.status.active::after {
                    background: #22c55e
                }

            .pill.status.banned {
                background: linear-gradient(180deg, color-mix(in oklab,#ef4444 22%, transparent), color-mix(in oklab,#dc2626 12%, transparent)), color-mix(in oklab, var(--bg-soft) 78%, transparent);
                border-color: color-mix(in oklab,#ef4444 45%, var(--border) 55%);
                text-shadow: 0 1px 0 color-mix(in oklab,#000 35%, transparent);
                color: #fee2e2;
            }

                .pill.status.banned::after {
                    background: #ef4444
                }

    /* ---------- empty state (nếu model rỗng) ---------- */
    .empty-state {
        display: grid;
        place-items: center;
        padding: 64px 18px;
        text-align: center;
        gap: 10px;
        color: var(--muted);
    }

        .empty-state .badge {
            display: inline-grid;
            place-items: center;
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: linear-gradient(180deg, color-mix(in oklab,var(--accent) 18%, transparent), transparent);
            border: 1px solid color-mix(in oklab,var(--accent) 30%, var(--border) 70%);
            box-shadow: 0 10px 22px color-mix(in oklab,#000 26%, transparent);
        }

    /* ---------- light theme tuning ---------- */
    :root[data-theme="light"] .card-surface {
        background: #fff;
        box-shadow: 0 10px 28px rgba(2,8,23,.08)
    }

        :root[data-theme="light"] .card-surface::after {
            opacity: .25
        }

    :root[data-theme="light"] .user-table thead th {
        background: linear-gradient(180deg, rgba(0,0,0,.03), rgba(0,0,0,.01));
        border-bottom: 1px solid var(--border);
    }

    :root[data-theme="light"] .user-table tbody tr:nth-child(even) {
        background: linear-gradient(0deg, rgba(0,0,0,.02), transparent)
    }

    :root[data-theme="light"] .user-table tbody tr:hover {
        background: linear-gradient(0deg, rgba(0,0,0,.03), transparent), linear-gradient(90deg, color-mix(in oklab,var(--accent) 18%, transparent), transparent 40%);
    }

    :root[data-theme="light"] .pill {
        color: #0f172a;
        text-shadow: none;
        border-color: rgba(0,0,0,.08);
        background: linear-gradient(180deg, #fff, #f7f8fb);
    }

        :root[data-theme="light"] .pill.role {
            background: linear-gradient(180deg, rgba(59,130,246,.18), rgba(14,165,233,.14), #fff 75%);
            border-color: rgba(59,130,246,.35);
        }

        :root[data-theme="light"] .pill.status.active {
            background: linear-gradient(180deg, rgba(34,197,94,.20), rgba(34,197,94,.12), #fff 75%);
            border-color: rgba(34,197,94,.30);
            color: #064e3b;
        }

        :root[data-theme="light"] .pill.status.banned {
            background: linear-gradient(180deg, rgba(239,68,68,.20), rgba(239,68,68,.12), #fff 75%);
            border-color: rgba(239,68,68,.28);
            color: #7f1d1d;
        }

    /* ---------- responsive ---------- */
    @@media (max-width: 992px) {
        .user-table

    {
        min-width: 680px
    }

    }
    /* ===== ACTION BUTTON ===== */
    .user-table th:nth-child(6), .user-table td:nth-child(6) {
        width: 150px;
        text-align: center;
    }

    .btn-ban {
