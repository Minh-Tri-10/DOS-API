@model IEnumerable<MVCApplication.DTOs.ProductDTO>
@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    Layout = "_Layout.Admin";
}
<style>
    /* ===== WOW PACK v2 – Users page (dark/light theo biến layout) ===== */
    /* ---------- khối trang & tiêu đề có underline phát sáng ---------- */
    .page-block {
        padding: 16px 0
    }

    .page-heading {
        display: flex;
        align-items: flex-end;
        gap: 12px;
        margin: 0 0 18px
    }

        .page-heading h2 {
            margin: 0;
            font-weight: 800;
            letter-spacing: .2px;
            line-height: 1.1
        }

        .page-heading .under {
            position: relative;
            height: 6px;
            flex: 1;
            min-width: 120px;
            border-radius: 999px;
            background: linear-gradient(90deg,var(--accent),var(--accent2));
            filter: saturate(1.1) brightness(1.05);
            box-shadow: 0 0 22px color-mix(in oklab,var(--accent) 45%, transparent);
        }
    /* ---------- card glass + viền gradient tinh tế ---------- */
    .card-surface {
        position: relative;
        isolation: isolate;
        background: color-mix(in oklab,var(--bg-soft) 92%, transparent);
        color: var(--text);
        border: 1px solid color-mix(in oklab,var(--border) 70%, transparent);
        border-radius: 18px;
        box-shadow: 0 10px 30px color-mix(in oklab, #000 35%, transparent), 0 1px 0 color-mix(in oklab,#fff 6%, transparent) inset;
        overflow: hidden;
    }

        .card-surface::before {
            content: "";
            position: absolute;
            inset: -1px;
            border-radius: inherit;
            z-index: -1;
            background: conic-gradient(from 180deg, color-mix(in oklab,var(--accent) 40%, transparent), color-mix(in oklab,var(--accent2) 40%, transparent), transparent 40%);
            filter: blur(10px) saturate(1.2);
            opacity: .45;
            mask: linear-gradient(#000 0 0);
            animation: ringFloat 12s linear infinite;
        }

    @@keyframes ringFloat {
        to {
            transform: rotate(1turn)
        }
    }

    .card-surface::after {
        content: "";
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 0;
        background: radial-gradient(1200px 600px at 10% -20%, color-mix(in oklab,var(--accent) 10%, transparent), transparent 60%), radial-gradient(800px 500px at 110% 30%, color-mix(in oklab,var(--accent2) 10%, transparent), transparent 60%);
        opacity: .35;
    }

    .table-wrap {
        position: relative;
        z-index: 1;
        overflow: auto;
        border-radius: 16px
    }

        .table-wrap::-webkit-scrollbar {
            height: 10px
        }

        .table-wrap::-webkit-scrollbar-thumb {
            background: color-mix(in oklab,var(--muted) 35%, transparent);
            border-radius: 30px;
            border: 2px solid transparent;
            background-clip: content-box;
        }

    .user-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        min-width: 860px;
        color: var(--text);
        table-layout: fixed;
        backdrop-filter: saturate(1.05);
    }

        .user-table thead th {
            position: sticky;
            top: 0;
            z-index: 2;
            background: linear-gradient(180deg, color-mix(in oklab,#fff 6%, transparent), transparent);
            backdrop-filter: blur(6px);
            text-align: left;
            font-weight: 700;
            letter-spacing: .2px;
            padding: 16px 18px;
            font-size: 13.5px;
            color: var(--muted);
            border-bottom: 1px solid color-mix(in oklab,var(--border) 70%, transparent);
        }

            .user-table thead th:first-child {
                border-top-left-radius: 16px
            }

            .user-table thead th:last-child {
                border-top-right-radius: 16px
            }

        .user-table tbody td {
            padding: 16px 18px;
            font-size: 15px;
            vertical-align: middle;
            border-bottom: 1px dashed color-mix(in oklab,var(--border) 70%, transparent);
            background: color-mix(in oklab,transparent 100%, transparent);
        }

        .user-table tbody tr:nth-child(even) {
            background: linear-gradient(0deg, color-mix(in oklab,#fff 3%, transparent), transparent);
        }

        .user-table tbody tr {
            transition: transform .18s ease, background .25s ease, box-shadow .25s ease;
        }

            .user-table tbody tr:hover {
                transform: translateY(-1px);
                background: linear-gradient(0deg, color-mix(in oklab,#fff 5%, transparent), transparent), linear-gradient(90deg, color-mix(in oklab,var(--accent) 14%, transparent), transparent 40%);
                box-shadow: 0 8px 22px color-mix(in oklab,#000 22%, transparent);
            }

            .user-table tbody tr:last-child td:first-child {
                border-bottom-left-radius: 16px
            }

            .user-table tbody tr:last-child td:last-child {
                border-bottom-right-radius: 16px
            }

        .user-table th:nth-child(1), .user-table td:nth-child(1) {
            width: 80px
        }

        .user-table th:nth-child(2), .user-table td:nth-child(2) {
            width: 200px
        }

        .user-table th:nth-child(3), .user-table td:nth-child(3) {
            width: 120px
        }

        .user-table th:nth-child(4), .user-table td:nth-child(4) {
            width: 250px
        }

        .user-table th:nth-child(5), .user-table td:nth-child(5) {
            width: 100px
        }

        .user-table th:nth-child(6), .user-table td:nth-child(6) {
            width: 100px
        }

        .user-table th:nth-child(7), .user-table td:nth-child(7) {
            width: 150px
        }

        .user-table th:nth-child(8), .user-table td:nth-child(8) {
            width: 220px /* Tăng width cột Hành động để tránh xuống dòng */
        }

    .cell-id {
        font-variant-numeric: tabular-nums;
        color: var(--muted)
    }

    .cell-username {
        font-weight: 700
    }

    .cell-email {
        color: var(--muted);
        word-break: break-all
    }

    .pill {
        display: inline-grid;
        place-items: center;
        width: 100%;
        min-width: 120px;
        padding: 10px 14px;
        border-radius: 999px;
        font-size: 13.5px;
        font-weight: 700;
        letter-spacing: .25px;
        position: relative;
        isolation: isolate;
        color: var(--text);
        background: linear-gradient(180deg, color-mix(in oklab,#fff 8%, transparent), transparent), color-mix(in oklab, var(--bg-soft) 80%, transparent);
        border: 1px solid color-mix(in oklab,var(--border) 70%, transparent);
        box-shadow: 0 1px 0 color-mix(in oklab,#fff 6%, transparent) inset, 0 6px 18px color-mix(in oklab,#000 30%, transparent);
        transition: box-shadow .25s ease, transform .12s ease, background .25s ease;
        white-space: nowrap;
    }

        .pill::before {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: inherit;
            z-index: -1;
            background: radial-gradient(80% 140% at 50% 0%, color-mix(in oklab,var(--accent) 30%, transparent), transparent 55%);
            opacity: .45;
            filter: saturate(1.2) blur(6px);
        }

        .pill:hover {
            transform: translateY(-1px);
            box-shadow: 0 1px 0 color-mix(in oklab,#fff 8%, transparent) inset, 0 10px 26px color-mix(in oklab, var(--accent2) 26%, transparent);
        }

    .empty-state {
        display: grid;
        place-items: center;
        padding: 64px 18px;
        text-align: center;
        gap: 10px;
        color: var(--muted);
    }

        .empty-state .badge {
            display: inline-grid;
            place-items: center;
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: linear-gradient(180deg, color-mix(in oklab,var(--accent) 18%, transparent), transparent);
            border: 1px solid color-mix(in oklab,var(--accent) 30%, var(--border) 70%);
            box-shadow: 0 10px 22px color-mix(in oklab,#000 26%, transparent);
        }

    :root[data-theme="light"] .card-surface {
        background: #fff;
        box-shadow: 0 10px 28px rgba(2,8,23,.08)
    }

        :root[data-theme="light"] .card-surface::after {
            opacity: .25
        }

    :root[data-theme="light"] .user-table thead th {
        background: linear-gradient(180deg, rgba(0,0,0,.03), rgba(0,0,0,.01));
        border-bottom: 1px solid var(--border);
    }

    :root[data-theme="light"] .user-table tbody tr:nth-child(even) {
        background: linear-gradient(0deg, rgba(0,0,0,.02), transparent)
    }

    :root[data-theme="light"] .user-table tbody tr:hover {
        background: linear-gradient(0deg, rgba(0,0,0,.03), transparent), linear-gradient(90deg, color-mix(in oklab,var(--accent) 18%, transparent), transparent 40%);
    }

    :root[data-theme="light"] .pill {
        color: #0f172a;
        text-shadow: none;
        border-color: rgba(0,0,0,.08);
        background: linear-gradient(180deg, #fff, #f7f8fb);
    }

    .btn-ban {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        padding: 8px 18px;
        font-size: 13.5px;
        font-weight: 700;
        border-radius: 999px;
        border: 1px solid transparent;
        cursor: pointer;
        text-decoration: none;
        transition: all .25s ease;
        background: linear-gradient(180deg, color-mix(in oklab,var(--accent) 12%, transparent), color-mix(in oklab,var(--accent2) 12%, transparent));
        color: var(--text);
        box-shadow: 0 1px 0 color-mix(in oklab,#fff 6%, transparent) inset, 0 6px 18px color-mix(in oklab,#000 30%, transparent);
        white-space: nowrap; /* Ngăn text trong nút bị xuống dòng */
    }

        .btn-ban:hover {
            filter: brightness(1.08);
            transform: translateY(-1px);
        }

        .btn-ban.ban {
            background: linear-gradient(180deg, color-mix(in oklab,#ef4444 20%, transparent), color-mix(in oklab,#dc2626 15%, transparent));
            border-color: rgba(239,68,68,.35);
            color: #fee2e2;
            text-shadow: 0 1px 0 color-mix(in oklab,#000 35%, transparent);
        }

            .btn-ban.ban:hover {
                box-shadow: 0 8px 22px color-mix(in oklab,#ef4444 25%, transparent);
            }

        .btn-ban.unban {
            background: linear-gradient(180deg, color-mix(in oklab,#22c55e 20%, transparent), color-mix(in oklab,#16a34a 15%, transparent));
            border-color: rgba(34,197,94,.35);
            color: #dcfce7;
            text-shadow: 0 1px 0 color-mix(in oklab,#000 35%, transparent);
        }

            .btn-ban.unban:hover {
                box-shadow: 0 8px 22px color-mix(in oklab,#22c55e 25%, transparent);
            }

    /* ===== PAGINATION STYLES – Đồng bộ với pill & btn-ban ===== */
    .pagination {
        display: flex;
        justify-content: center;
        gap: 8px;
        margin-top: 24px;
        flex-wrap: wrap;
    }

    .page-item {
        list-style: none;
    }

    .page-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 42px;
        height: 42px;
        padding: 0 16px;
        font-size: 14px;
        font-weight: 700;
        border-radius: 999px;
        position: relative;
        isolation: isolate;
        color: var(--text);
        background: linear-gradient(180deg, color-mix(in oklab,#fff 8%, transparent), transparent), color-mix(in oklab, var(--bg-soft) 80%, transparent);
        border: 1px solid color-mix(in oklab,var(--border) 70%, transparent);
        box-shadow: 0 1px 0 color-mix(in oklab,#fff 6%, transparent) inset, 0 4px 12px color-mix(in oklab,#000 20%, transparent);
        transition: all .25s ease;
        text-decoration: none;
    }

        .page-link::before {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: inherit;
            z-index: -1;
            background: radial-gradient(80% 140% at 50% 0%, color-mix(in oklab,var(--accent) 25%, transparent), transparent 55%);
            opacity: 0.35;
            filter: saturate(1.2) blur(4px);
        }

        .page-link:hover {
            transform: translateY(-1px);
            box-shadow: 0 1px 0 color-mix(in oklab,#fff 8%, transparent) inset, 0 6px 18px color-mix(in oklab, var(--accent2) 22%, transparent);
            background: linear-gradient(180deg, color-mix(in oklab,var(--accent2) 12%, transparent), color-mix(in oklab,var(--accent) 10%, transparent)), color-mix(in oklab, var(--bg-soft) 78%, transparent);
        }

    .page-item.active .page-link {
        background: linear-gradient(180deg, color-mix(in oklab,var(--accent2) 18%, transparent), color-mix(in oklab,var(--accent) 14%, transparent)), color-mix(in oklab, var(--bg-soft) 78%, transparent);
        border-color: color-mix(in oklab, var(--accent2) 40%, var(--border) 60%);
        box-shadow: 0 1px 0 color-mix(in oklab,#fff 8%, transparent) inset, 0 8px 22px color-mix(in oklab, var(--accent2) 26%, transparent);
        color: var(--text);
        text-shadow: 0 1px 0 color-mix(in oklab,#000 35%, transparent);
    }

    .page-item.disabled .page-link {
        opacity: 0.5;
        cursor: not-allowed;
    }
    /* Light theme overrides */
    :root[data-theme="light"] .page-link {
        color: #0f172a;
        text-shadow: none;
        border-color: rgba(0,0,0,.08);
        background: linear-gradient(180deg, #fff, #f7f8fb);
    }

        :root[data-theme="light"] .page-link:hover {
            background: linear-gradient(180deg, rgba(59,130,246,.16), rgba(14,165,233,.12), #fff 75%);
            border-color: rgba(59,130,246,.35);
        }

    :root[data-theme="light"] .page-item.active .page-link {
        background: linear-gradient(180deg, rgba(59,130,246,.18), rgba(14,165,233,.14), #fff 75%);
        border-color: rgba(59,130,246,.35);
        color: #0f172a;
    }

    .actions {
        display: flex;
        justify-content: center;
        gap: 8px;
        align-items: center;
        flex-wrap: nowrap; /* Đảm bảo các nút không wrap xuống dòng */
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 12px;
    }
</style>
<div class="page-block">
    <div class="page-heading">
        <h2>Danh sách Sản phẩm</h2>
        <div class="under"></div>
    </div>
    <!-- Form tìm kiếm và sắp xếp sản phẩm -->
    <form asp-action="Index" method="get" class="mb-3">
        <div class="row g-2">
            <!-- Search -->
            <div class="col-md-4">
                <input type="text" name="search" value="@ViewBag.Search"
                       class="form-control" placeholder="Tìm kiếm theo tên sản phẩm..." />
            </div>

            <!-- Sort -->
            <div class="col-md-3">
                <select name="orderBy" class="form-select">
                    <option value="ProductId asc" selected="@(ViewBag.OrderBy == "ProductId asc")">ID tăng dần</option>
                    <option value="ProductId desc" selected="@(ViewBag.OrderBy == "ProductId desc")">ID giảm dần</option>
                    <option value="ProductName asc" selected="@(ViewBag.OrderBy == "ProductName asc")">Tên tăng dần</option>
                    <option value="ProductName desc" selected="@(ViewBag.OrderBy == "ProductName desc")">Tên giảm dần</option>
                    <option value="Price asc" selected="@(ViewBag.OrderBy == "Price asc")">Giá thấp đến cao</option>
                    <option value="Price desc" selected="@(ViewBag.OrderBy == "Price desc")">Giá cao đến thấp</option>
                    <option value="Stock asc" selected="@(ViewBag.OrderBy == "Stock asc")">Tồn kho tăng dần</option>
                    <option value="Stock desc" selected="@(ViewBag.OrderBy == "Stock desc")">Tồn kho giảm dần</option>
                </select>
            </div>

            <!-- PageSize -->
            <div class="col-md-2">
                <select name="pageSize" class="form-select">
                    <option value="10" selected="@(ViewBag.PageSize == 10)">10 / trang</option>
                    <option value="20" selected="@(ViewBag.PageSize == 20)">20 / trang</option>
                    <option value="50" selected="@(ViewBag.PageSize == 50)">50 / trang</option>
                </select>
            </div>

            <!-- Buttons -->
            <div class="col-md-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">Áp dụng</button>
                <a asp-action="Index" class="btn btn-secondary flex-grow-1">Reset</a>
            </div>

        </div>

        <!-- Reset page to 1 when searching -->
        <input type="hidden" name="page" value="1" />
    </form>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">@TempData["Error"]</div>
    }
    <p>
        <a asp-action="Create" class="btn-ban unban">Tạo Sản phẩm Mới</a>
    </p>
    <div class="card-surface">
        <div class="table-wrap">
            @if (Model == null || !Model.Any())
            {
                <div class="empty-state">
                    <div class="badge">!</div>
                    <h3>Không tìm thấy sản phẩm</h3>
                    <p>Tạo sản phẩm mới để bắt đầu.</p>
                </div>
            }
            else
            {
                <table class="user-table">
                    <thead>
                        <tr>
                            <th class="cell-id">ID</th>
                            <th>Tên Sản phẩm</th>
                            <th>Ảnh</th>
                            <th>Mô tả</th>
                            <th>Giá</th>
                            <th>Tồn kho</th>
                            <th>Danh mục</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="cell-id">@item.ProductId</td>
                                <td class="cell-username">@item.ProductName</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.ProductName" style="max-width: 100px; height: auto;" />
                                    }
                                    else
                                    {
                                        <span>Không có ảnh</span>
                                    }
                                </td>
                                <td class="cell-email">@item.Description</td>
                                <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                                <td>@item.Stock</td>
                                <td>@(ViewBag.Categories.ContainsKey(item.CategoryId) ? ViewBag.Categories[item.CategoryId] : "Không xác định")</td>
                                <td>
                                    <div class="actions">
                                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn-ban unban btn-sm">Chi tiết</a>
                                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn-ban btn-sm">Sửa</a>
                                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn-ban ban btn-sm">Xóa</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @if (ViewBag.Page > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.Page - 1)" asp-route-pageSize="@ViewBag.PageSize" asp-route-search="@ViewBag.Search" asp-route-orderBy="@ViewBag.OrderBy">Trước</a>
                            </li>
                        }
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@ViewBag.PageSize" asp-route-search="@ViewBag.Search" asp-route-orderBy="@ViewBag.OrderBy">@i</a>
                            </li>
                        }
                        @if (ViewBag.Page < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.Page + 1)" asp-route-pageSize="@ViewBag.PageSize" asp-route-search="@ViewBag.Search" asp-route-orderBy="@ViewBag.OrderBy">Sau</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Tự động ẩn alert sau 5 giây
            setTimeout(function() {
                $('.alert').fadeOut(300);
            }, 5000);
        });
    </script>
}